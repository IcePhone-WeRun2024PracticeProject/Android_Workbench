<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:id="@+id/shanghua"
        android:background="@color/material_dynamic_neutral40"></View>

    <EditText
        android:id="@+id/account_register"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_btn3"
        android:drawableLeft="@drawable/account"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/password_register"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn3"
        android:layout_marginTop="120dp"
        android:drawableLeft="@drawable/password"
        android:inputType="text"
        android:paddingLeft="10dp" />
    <EditText
        android:id="@+id/phonenumber"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn3"
        android:layout_marginTop="200dp"
        android:drawableLeft="@drawable/phonenumber"
        android:inputType="number"
        android:paddingLeft="10dp" />
    <Button
        android:id="@+id/testcode"
        android:layout_marginTop="280dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@+id/test"
        android:background="@drawable/bg_btn_ori"
        android:text="获取验证码"
        android:textColor="@color/black"
        android:textSize="18sp" />
    <Button
        android:id="@+id/register"
        android:layout_marginTop="400dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn_ori"
        android:text="注册"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/test"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="280dp"
        android:background="@drawable/bg_btn3"
        android:drawableLeft="@drawable/test"
        android:inputType="number"
        android:paddingLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:paddingLeft="15dp"
        android:text="注册表示你同意该软件用户服务协议和隐私政策"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"/>


</RelativeLayout>